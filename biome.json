{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "ignore": [
      ".next/**",
      "node_modules/**",
      "public/**",
      ".github/**",
      "posts/**/*.md",
      "storybook-static/**",
      "out/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "ignore": [
      ".next/**",
      "node_modules/**",
      "public/**",
      ".github/**",
      "posts/**/*.md",
      "storybook-static/**",
      "out/**"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5"
    }
  }
}
